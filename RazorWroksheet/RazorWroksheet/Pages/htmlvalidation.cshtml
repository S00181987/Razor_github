@page
@model RazorWroksheet.Pages.htmlvalidationModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>htmlvalidation</title>
    <link rel="stylesheet" type="text/css" href="~/Main.css" />
</head>
<body>
    <form method="post">
        <fieldset>
            <label for="StudentNumber">Student Number</label>
            <input type="text" name="studentnumber" id="StudentNumber" maxlength="9" required pattern="[Ss]+\d{8}" /><br />
        </fieldset>

        <fieldset>
           <p><label for="NumbersA">Num A:</label>
            <input type="number" name="numberA" id="NumbersA" step="1" /><br /></p>

            <p><label for="NumberB">Num B:</label>
            <input type="number" name="numberB" id="NumbersB" min="-10" max="10" /><br /></p>

            <label for="NumberC">Num C:</label>
            <input type="number" name="numberC id=NumbersC" min="0" step="0.01" />


        </fieldset>

        <p><input type="submit" name="submit" value="Press me" /></p>
    </form>
</body>
</html>
